/* ==UserStyle==
@name           GruvBox - Gmail
@namespace      github.com/Xedecimal/userstyles
@version        1.0.1
@description    Gmail... Gruvbox style.
@preprocessor   stylus
@author         Xedecimal
@license        WTFPL
@updateURL      https://raw.githubusercontent.com/Xedecimal/userstyles/master/gruvbox-gmail.user.styl
@homepageURL    https://github.com/Xedecimal/userstyles
@var color color-text           "Text"                  #BDAE93
@var color color-text-dark      "Text Dark"             #A89984
@var color color-back           "Background"            #282828
@var color color-back-dark      "Background Dark"       #1D2021
@var color color-back-light     "Background Bright"     #3C3836
@var color color-highlight      "Highlight"             #FB4934
@var color color-notification   "Notification"          #B8BB26

==/UserStyle== */
@-moz-document domain("mail.google.com") {
    body, input, .aAT, .aAU, .w-asV.aiw, .nH .if, .nH .bkL, .aeJ, .yO, .bhZ.bym, .bhZ.bjB, .IG, .GQ, .Ap, .aoP .Ar, .Am, .aDg>.aDj {
        background: color-back
        color: color-text
    }

    .hx, .hx .gD, .ha>.hP, .gb_ja svg, .y2, .TO .nU>.n0, .TO.NQ .nU>.n0, .TO.nZ .nU>.n0, .ah9>.CJ, .n3>.CL>.CK, .gt a, .go, .ig .g3, .hI .g3, .iv .g3, .hx .hb {
        color: color-text
    }
    
    /* Unread */
    
    .zE {
        background: color-back
        color: color-text
    }
    
    /* Notification */
    
    .Tm .ya, div.ajR {
        background: color-back-dark
        color: color-notification
    }
    
    .zA>.PE.PF::before {
        background: color-notification
    }
    
    /* Quick Buttons */
    
    .dF .dG, .nr, .Ar {
        background: none
    }

    .amn>.ams, .bxX, .btA .btz.T-I-ax7, .btA .Uo {
        background: color-back-dark
        color: color-text
        border-color: color-back
        box-shadow: inset 0 0 0 1px color-back-dark
    }
    
    /* Selected Mail */
    
    .x7 {
        color: color-notification
        background: color-back
    }

    /* Icons */
    .ams.bkH::before, .ams.bkG::before, .asa, .qj, .bqX, .xY>.T-Jo, td.apU>.T-KT.aXw::before, .G-tF .T-Jo, .G-asx, .d-Na-J3.d-Na-JX-ax3.d-Na-hFsbo, .adj, .amI, .adk, .amJ, .aBS .d-Na-JX-I .d-Na-J3, .og.T-I-J3, .Xv.T-I.J-JN-M-I>.J-JN-M-I-JG, .aMZ.a3G, .a8X>.bAK, .dv, .bi4>.T-KT:not(.T-KT-Jp):not(.byM)::before, .hB, .mL, .g1, .gZ, .ajy>.ajz, div.ajR .ajT {
        filter: invert(1)
    }
        
    /* Compose Icon */
    .z0>.L3 {
        background-color: color-back-light
    }
    
    .z0>.L3:hover, .z0>.L3:focus {
        color: color-text
        background-color: color-back-dark
    }
}
